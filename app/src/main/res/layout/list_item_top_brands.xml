<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_top_brand"
        android:layout_width="196dp"
        android:layout_height="124dp"
        android:src="@drawable/bg_main_button_inactive"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_top_brand"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:text="sfdgd"
        style="@style/TextAppearance.DialogMessage"
        android:textColor="@color/black"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="@+id/iv_top_brand"
        app:layout_constraintStart_toStartOf="@+id/iv_top_brand"
        app:layout_constraintTop_toBottomOf="@+id/iv_top_brand" />

</androidx.constraintlayout.widget.ConstraintLayout>