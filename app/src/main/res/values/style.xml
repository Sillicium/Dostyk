<resources>
    <style name="BaseButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_marginEnd">14dp</item>
    </style>


    <style name="MainButton" parent="BaseButton">
        <item name="android:textColor">@color/main_btn_txt</item>
        <item name="android:background">@drawable/bg_main_button</item>
    </style>
</resources>