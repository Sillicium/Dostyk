<resources>
    <style name="BaseButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_marginEnd">14dp</item>
    </style>


    <style name="MainButton" parent="BaseButton">
        <item name="android:textColor">@color/main_btn_txt</item>
        <item name="android:background">@drawable/bg_main_button</item>
    </style>


    <style name="DarkButton" parent="BaseButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_dark_button</item>
    </style>


    <!--   ROUNDED BOTTOM SHEET-->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">

        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/bg_gray_8dp_radius</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:typeface">monospace</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />


    <!--   ROUNDED BOTTOM SHEET-->
    <style name="BaseSwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">

        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/bg_gray_8dp_radius</item>
    </style>

</resources>